				<exclude>uima-ducc-jd/.classpath</exclude> <exclude>uima-ducc-jd/.project</exclude> 
				<exclude>uima-ducc-jd/.settings/**</exclude> <exclude>uima-ducc-jd/target/**</exclude> 
				<exclude>uima-ducc-orchestrator/.classpath</exclude> <exclude>uima-ducc-orchestrator/.project</exclude> 
				<exclude>uima-ducc-orchestrator/.settings/**</exclude> <exclude>uima-ducc-orchestrator/target/**</exclude> 
				<exclude>uima-ducc-parent/target/**</exclude> <exclude>uima-ducc-pm/.classpath</exclude> 
				<exclude>uima-ducc-pm/.project</exclude> <exclude>uima-ducc-pm/.settings/**</exclude> 
